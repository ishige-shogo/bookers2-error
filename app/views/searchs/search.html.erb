<div class="container">
  <div class ="row">
      <table class="table">
        <% if @range == "1" %>
          <h2>Users search for "<%= @word %>"</h2>
          <thead>
            <tr>
              <th></th>
              <th>Name</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td>image</td>
                <td><%= user.name %></td>
                <td><%= link_to 'Show', user_path(user), class: "user_#{user.id}" %></td>
              </tr>
            <% end %>
          </tbody>
        <% else %>
          <h2>Books search for "<%= @word %>"</h2>
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
            </tr>
          </thead>
          <tbody>
            <% @books.each do |book| %>
              <tr>
                <td>image</td>
                <td><%= link_to book.title, book_path(book), class: "book_#{book.id}" %></td>
                <td><%= book.body %></td>
              </tr>
            <% end %>
          </tbody>
        <% end %>
      </table>
